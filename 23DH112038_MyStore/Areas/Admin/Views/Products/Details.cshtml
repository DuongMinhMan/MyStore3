@model _23DH112038_MyStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>CHI TIẾT SẢN PHẨM</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="fw-bold text-uppercase"> Tên sản phẩm </dt>
        <dd> @Html.DisplayFor(model => model.ProductName) </dd>

        <dt class="fw-bold text-uppercase"> Mô tả </dt>

        <dd> @Html.DisplayFor(model => model.ProductDescription) </dd>

        <dt class="fw-bold text-uppercase"> Đơn giá </dt>

        <dd> @Html.DisplayFor(model => model.ProductPrice) </dd>

        <dt class="fw-bold text-uppercase"> Hình ảnh </dt>
        @*<dd><img src="@Url.Content("~/SanPham/" + Model.ProductImage)" width="50" height="50" /></dd>*@
        <dd>  <img style="height:50px;width:50px" src="@Html.DisplayFor(modelItem => Model.ProductImage) " /> </dd>

        <dt class="fw-bold text-uppercase"> Danh mục </dt>

        <dd> @Html.DisplayFor(model => model.Category.CategoryName) </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-info btn-md" }) | @*Nút xanh*@
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-success btn-md" }) @*nút xanh*@
</p>





