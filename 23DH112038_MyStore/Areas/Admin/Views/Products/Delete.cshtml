@model _23DH112038_MyStore.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>XOÁ SẢN PHẨM</h2>

<h3>Bạn có chắc chắn muốn xoá sản phẩm này chứ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>

            @*<img src="@Url.Content("~/SanPham/" + Model.ProductImage)" width="50" height="50" />*@
            <img src=" " @Html.DisplayFor(modelItem => Model.ProductImage) />
        </dd>

        <dt>
            Danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-info btn-md" }) @*nút xanh*@
        </div>
    }
</div>
